<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>MyProject</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources.localization</param-value>
  </context-param>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>by.htp.project.controller.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>CharsetFilter</filter-name>
    <filter-class>by.htp.project.controller.filter.CharacterFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CharsetFilter</filter-name>
    <url-pattern>/controller</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>by.htp.project.controller.listener.ProjectRequestListener</listener-class>
  </listener>
  <listener>
    <listener-class>by.htp.project.controller.listener.ServletInitListener</listener-class>
  </listener>
  <filter>
    
    <filter-name>AccessFilter</filter-name>
    <filter-class>by.htp.project.controller.filter.AccessFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AccessFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
 <error-page>
 <exception-type>java.lang.Throwable</exception-type>
 <location>/error.jsp</location>
 </error-page>
</web-app>